{
    "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib":  [
        "es2020",
        "dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,

    "paths": {
        "@quote-calc-system/*": [
            "./src/*"
        ]
    }
  },
  "include": [
    "./src"
  ]
}